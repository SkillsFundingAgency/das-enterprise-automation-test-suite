<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PackageId>SFA.DAS.UI.Framework</PackageId>
    <Title>Specflow DotNet Core UI framework</Title>
    <Configurations>Debug;Release;Development</Configurations>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageVersion>1.0.2</PackageVersion>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Authors>arvinthseran; Imran Ali</Authors>
    <Company>SFA.DAS</Company>
    <Description>A generic repository wrapper for Specflow UI Framework integrated with donet core</Description>
    <PackageProjectUrl>https://accounts.manage-apprenticeships.service.gov.uk/service/index</PackageProjectUrl>
    <RepositoryUrl>https://github.com/SkillsFundingAgency/DFE-Standardised-Test-Automation-Framework/tree/master/src/SFA.DAS.UI.Framework</RepositoryUrl>
    <PackageLicenseExpression>MS-PL</PackageLicenseExpression>
    <NeutralLanguage>en</NeutralLanguage>
    <PackageTags>specflow bdd gherkin borwserstack</PackageTags>
    <RepositoryType>git</RepositoryType>
    <dependencies>
      <dependency id="SFA.DAS.UI.FrameworkHelpers" version="1.0.2" />
    </dependencies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CsvHelper" Version="15.0.5" />
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="87.0.4280.8800" />
    <PackageReference Include="SpecFlow" Version="3.3.30" />
    <PackageReference Include="SpecFlow.NUnit" Version="3.3.30" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SFA.DAS.TestDataExport\SFA.DAS.TestDataExport.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.BrowserStack.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="appsettings.TimeOutConfig.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
	<None Update="appsettings.NServiceBusConfig.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="appsettings.TestExecution.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
